{
  "name": "@mahjong/core",
  "version": "0.1.0",
  "description": "Mahjong core library for tiles, scoring, and hand evaluation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
