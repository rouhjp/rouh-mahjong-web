    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^9.25.0",
    "eslint-plugin-import": "^2.31.0",
    "typescript": "^5.8.3",
    "vitest": "^1.6.0"
  },
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "lodash": "^4.17.21"
